<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivImagenProyecto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tvNombreProyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivImagenProyecto"
        android:layout_marginBottom="4dp"
        android:text="Nombre del Proyecto"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNombreProyecto"
        android:layout_toEndOf="@id/ivImagenProyecto"
        android:layout_marginTop="4dp"
        android:text="UbicaciÃ³n del Proyecto"
        android:textSize="14sp"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/tvCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNombreProyecto"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="55dp"
        android:layout_marginTop="33dp"
        android:text="codigo"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerMas"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@id/tvUbicacion"
        android:layout_marginStart="55dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/ivImagenProyecto"
        android:backgroundTint="@color/blue"
        android:text="Detalles"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnModificar"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@id/tvNombreProyecto"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="@color/teal_200"
        android:text="Modificar"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEliminar"
        android:layout_width="117dp"
        android:layout_height="34dp"
        android:layout_below="@id/btnModificar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-35dp"
        android:layout_marginEnd="282dp"
        android:backgroundTint="@color/design_default_color_error"
        android:text="Borrar"
        android:textColor="@android:color/white"
        android:textSize="9sp"
        app:cornerRadius="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUbicacion"
        android:layout_marginStart="0dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="64dp"

        android:layout_toEndOf="@+id/ivImagenProyecto"
        android:text="Codigo: " />

</RelativeLayout>
