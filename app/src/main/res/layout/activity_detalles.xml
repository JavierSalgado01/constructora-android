<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Detalles">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Imagen del Proyecto -->
            <ImageView
                android:id="@+id/ivImagenProyecto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen del Proyecto"
                android:layout_marginBottom="16dp" />

            <!-- Código del Proyecto -->
            <TextView
                android:id="@+id/tvCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <!-- Nombre del Proyecto -->
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Proyecto"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingBottom="16dp" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del Proyecto"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingBottom="16dp" />

            <!-- Estado -->
            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado: "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingBottom="8dp" />

            <!-- Fechas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tvFechaInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Inicio: "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvFechaTermino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Término: "
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Presupuesto -->
            <TextView
                android:id="@+id/tvPresupuesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Presupuesto: "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingBottom="8dp" />

            <!-- Ubicación -->
            <TextView
                android:id="@+id/tvUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicación: "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingBottom="8dp" />

            <!-- Región -->
            <TextView
                android:id="@+id/tvRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Región:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingBottom="8dp" />

            <!-- Solicitante -->
            <TextView
                android:id="@+id/tvSolicitante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solicitante:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingBottom="8dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
